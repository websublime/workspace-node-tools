# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,mjs,cjs,tsx}]
indent_style = space
indent_size = 2
insert_final_newline = true
block_comment_start = /**
block_comment = *
block_comment_end = */
quote_type = single

[*.{json}]
indent_style = space
indent_size = 2
quote_type = double

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[*.go]
insert_final_newline = false
trim_trailing_whitespace = false

[*.rs]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4
max_line_length = 100

# The indent size used in the `package.json` file cannot be changed
# https://github.com/npm/npm/pull/3180#issuecomment-16336516
[{*.yml,*.yaml,package.json}]
indent_style = space
indent_size = 2