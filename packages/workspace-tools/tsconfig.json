{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "types": ["node", "vite/client"]
  },
  "include": ["."],
  "exclude": ["src/*.js", "src/*.mjs", "src/*.cjs"]
}
